@model Blog.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container">
    <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6">
        <div class="card ">
            <div class="card-header card text-dark bg-info mb-3">
                <div class="card-title">Sign Up</div>
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">

                    <div class="mb-3">
                        <label asp-for="user.Username" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="user.Username" type="text" class="form-control" placeholder="User Name">
                            <span asp-validation-for="user.Username"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="user.Email" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="user.Email" class="form-control" placeholder="Email Address">
                            <span asp-validation-for="user.Email"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="user.Password" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input type="password" asp-for="user.Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="user.Password"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <!-- Button -->
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-info" value="Register"><i class="icon-hand-right"></i>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                <a asp-controller="Account" asp-action="Login">Sign In</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
